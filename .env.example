# Server Configuration
PORT=3000
ENVIRONMENT=development # development or production

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/recipeapp

# Authentication
JWT_SECRET=change-this-to-a-secure-secret
JWT_EXPIRATION=3600 # 1 hour in seconds

# Rate Limiting
RATE_LIMIT_MAX=100 # Maximum requests per window
RATE_LIMIT_WINDOW=60000 # Time window in milliseconds (1 minute)

# File Upload
MAX_FILE_SIZE=5242880 # 5MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif
UPLOAD_DIR=./upload

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://www.rezept-planer.de

# Logging
LOG_LEVEL=info # debug, info, warn, error

# Optional: Redis Configuration (for future use)
# REDIS_URI=redis://localhost:6379
# REDIS_PASSWORD=
# REDIS_DB=0

# Optional: Email Configuration (for future use)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASS=your-password
# EMAIL_FROM=noreply@example.com
