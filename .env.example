# Server Configuration
PORT=8000  # Optional: defaults to 3000
ENVIRONMENT=development  # Optional: defaults to 'development'

# Authentication
JWT_SECRET=your-jwt-secret-here  # Required
JWT_EXPIRATION=3600  # Optional: defaults to 3600

# Rate Limiting
RATE_LIMIT_MAX=100  # Optional: defaults to 100
RATE_LIMIT_WINDOW=60000  # Optional: defaults to 60000

# File Upload (Optional - all have defaults)
MAX_FILE_SIZE=5242880  # defaults to 5MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif  # defaults to these same values

# Database
MONGODB_URI=mongodb://localhost:27017/recipe-app  # Required
MONGO_DB_NAME=recipe-app  # Optional: defaults to 'recipe-app'

# CORS
CORS_ORIGINS=http://localhost:8000,http://127.0.0.1:8000  # Required

# Logging
LOG_LEVEL=debug  # Optional: defaults to 'info'

# Cloudflare R2 Storage (All Required)
R2_ACCESS_KEY_ID=your-access-key-id
R2_SECRET_ACCESS_KEY=your-secret-access-key
R2_BUCKET_NAME=your-bucket-name
R2_ACCOUNT_ID=your-account-id
