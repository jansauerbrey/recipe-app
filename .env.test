# Server Configuration
PORT=8001
HOST=localhost
ENVIRONMENT=test

# Authentication
JWT_SECRET=test-secret-key
JWT_EXPIRATION=3600

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif
UPLOAD_DIR=./uploads

# Database
MONGODB_URI=mongodb://127.0.0.1:27018/recipe_app_test
MONGO_DB_NAME=recipe_app_test

# CORS
CORS_ORIGINS=http://localhost:8001,http://127.0.0.1:8001

# Logging
LOG_LEVEL=debug
