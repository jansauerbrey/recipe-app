{
  "tasks": {
    "test": "deno test --allow-read --allow-env src/test/"
  },
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "lib": ["deno.ns"],
    "types": ["./types.d.ts"]
  },
  "imports": {
    "std/": "https://deno.land/std@0.208.0/",
    "std/testing/": "https://deno.land/std@0.208.0/testing/",
    "std/testing/asserts": "https://deno.land/std@0.208.0/testing/asserts.ts"
  },
  "test": {
    "include": ["src/test/"]
  },
  "fmt": {
    "include": ["src/"],
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": true
  }
}
