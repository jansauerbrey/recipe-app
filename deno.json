{
  "compilerOptions": {
    "strict": true
  },
  "importMap": "./import_map.json",
  "tasks": {
    "start": "deno run --allow-net --allow-read --allow-env app.ts",
    "test": "deno test --allow-net --allow-read --allow-write --allow-env src/",
    "test:coverage": "deno test --coverage --allow-net --allow-read --allow-write --allow-env src/ && deno coverage",
    "lint": "deno lint",
    "fmt": "deno fmt"
  },
  "lint": {
    "include": ["src/", "public/"],
    "exclude": ["public/lib/"],
    "rules": {
      "tags": ["recommended"],
      "exclude": [
        "ban-types",
        "no-explicit-any",
        "no-unused-vars",
        "require-await",
        "no-var",
        "no-inner-declarations",
        "no-redeclare",
        "prefer-const"
      ]
    }
  },
  "fmt": {
    "files": {
      "include": ["src/"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "always"
    }
  }
}