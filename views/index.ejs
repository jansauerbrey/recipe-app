<!DOCTYPE html>
<html ng-app="app">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= title %></title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
</head>
<body>

<ng-view></ng-view>

<!-- Libraries -->
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.25/angular.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.25/angular-route.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.25/angular-resource.min.js"></script>
<script src="/javascripts/ui-bootstrap-tpls.min.js"></script>
<script src="/javascripts/angular-bootstrap-checkbox.js"></script>
<script src="/javascripts/recipeapp.js"></script>
  
<!-- Template -->   
<script type="text/ng-template" id="/index.html">
  <a class="btn btn-default" href="/#/shopitems/" role="button">shopitems</a>
  <a class="btn btn-default" href="/#/schedules/" role="button">schedules</a>
  <a class="btn btn-default" href="/#/recipes/" role="button">recipes</a>
  <a class="btn btn-default" href="/#/tags/" role="button">tags</a>
  <a class="btn btn-default" href="/#/ingredients/" role="button">ingredients</a>
  <a class="btn btn-default" href="/#/units/" role="button">units</a>

</script>


<script type="text/ng-template" id="/units.html">
<div class="container">
  <div class="row">
    <input type="text" ng-model="search.name.de" class="form-control visible-xs-block" placeholder="Search...">
    <input type="text" ng-model="search.name" class="form-control hidden-xs" placeholder="Search...">
    <div class="container">
      <h4 class="col-sm-4 hidden-xs">Englisch:</h4>
      <h4 class="col-sm-4 hidden-xs">Deutsch:</h4>
      <h4 class="col-sm-4 hidden-xs">Finnisch:</h4>      
    </div>
    <div class="list-group">
      <div ng-repeat="unit in units | filter: search">
        <a class="list-group-item container" href="#/units/{{unit._id}}">
          <div class="col-xs-12 col-sm-4">{{unit.name.en}}</div>
          <div class="col-sm-4 hidden-xs">{{unit.name.de}}</div>
          <div class="col-sm-4 hidden-xs">{{unit.name.fi}}</div>
        </a>
      </div>
    </div>
    <div class="form-inline form-group">
      <a class="btn btn-primary" href="/#/unitadd/" role="button">add</a>
    </div>
  </div>
</div>
</script>

<script type="text/ng-template" id="/unitdetails.html">
<div class="container">
  <div class="row">
    <div class="form">
      <div class="form-group">
        <label class="control-label">Englisch:</label>
        <input type="text" ng-model="unit.name.en" class="form-control">
      </div>
      <div class="form-group">
        <label class="control-label">Deutsch:</label>
        <input type="text" ng-model="unit.name.de" class="form-control">
      </div>
      <div class="form-group">
        <label class="control-label">Finnisch:</label>
        <input type="text" ng-model="unit.name.fi" class="form-control">
      </div>
      <div class="form-group">
        <button ng-click="update()" class="btn btn-primary">update</button>
        <a class="btn btn-default" href="/#/units/" role="button">cancel</a>
        <button ng-click="remove()" class="btn btn-default pull-right">remove</button>
      </div>
    </div>
  </div>
</div>
</script>


<script type="text/ng-template" id="/unitadd.html">
<div class="container">
  <div class="row">
    <div class="form">
      <div class="form-group">
        <label class="control-label">Englisch:</label>
        <input type="text" ng-model="newunit.name.en" class="form-control">
      </div>
      <div class="form-group">
        <label class="control-label">Deutsch:</label>
        <input type="text" ng-model="newunit.name.de" class="form-control">
      </div>
      <div class="form-group">
        <label class="control-label">Finnisch:</label>
        <input type="text" ng-model="newunit.name.fi" class="form-control">
      </div>
      <div class="form-group">
        <button ng-click="save()" class="btn btn-primary">create</button>
        <a class="btn btn-default" href="/#/units/" role="button">cancel</a>
      </div>
    </div>
  </div>
</div>
</script>


</body>
</html>
